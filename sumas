        <div class="matrix matrix-b">
            <form id="matrix2">
                <h2>Matriz B:</h2>
                <table>
                    <tr>
                        <td><input type="number" name="b00"></td>
                        <td><input type="number" name="b01"></td>
                        <td><input type="number" name="b02"></td>
                    </tr>
                    <tr>
                        <td><input type="number" name="b10"></td>
